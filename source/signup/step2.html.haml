        .row
          .col-xs-6
            %input.form-control{placeholder: 'SMS-код', length: '4'}
          .col-xs-6
            %a.btn.btn-default{href: 'javascript:confirm("ваш номер 8 906 333 44 55?");alert("код выслан на ваш номер")'}
